<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="layout" alignment="CENTER" prefHeight="600" prefWidth="400" xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1" >
<padding> <Insets bottom="10.0" left="30.0" right="25.0" top="25.0" /> </padding>

  <children>
    <Button fx:id="okButton" prefHeight="20" prefWidth="100" text="OK" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Label fx:id="messageLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <TextField fx:id="nameArea" text="Enter your name" GridPane.columnIndex="1" />
  </children>

</GridPane>
